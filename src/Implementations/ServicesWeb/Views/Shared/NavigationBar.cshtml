@using NativeCode.Core.Extensions

<nav id="navigation" class="navbar navbar-inverse navbar-default navbar-fixed-top">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                <span class="glyphicon glyphicon-cloud"></span>
            </a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                @if (this.User != null && this.User.Identity.IsAuthenticated)
                {
                    <li>
                        <a href="#">Downloads <span class="sr-only">(current)</span></a>
                    </li>
                }
            </ul>

            <!-- Right -->
            <ul class="nav navbar-nav navbar-right">
                @if (this.User != null && this.User.Identity.IsAuthenticated)
                {
                    if (this.User.IsInRole("Application Admins"))
                    {
                        <li>
                            <a href="@Url.Action("Index", "Dashboard", new { Area = "Admin" })" class="btn btn-sm">
                                <span class="glyphicon glyphicon-cog icon"></span>
                            </a>
                        </li>
                    }
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <span>
                                <span class="glyphicon glyphicon-user icon"></span>
                                <span>
                                    @this.User.Identity.Name<span class="caret"></span>
                                </span>
                            </span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Profile", "Index", "Profile")</li>
                            <li><a href="#">History</a></li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                        </ul>
                    </li>
                }
                else
                {
                    <li>
                        <a href="#" data-toggle="modal" data-target="#login-panel-modal">Login</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

@if (this.User != null && this.User.Identity.IsAuthenticated.Not())
{
    <div class="modal fade" id="login-panel-modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Login</h4>
                </div>
                <div class="modal-body">
                    @Html.Partial("LoginPanel")
                </div>
            </div>
        </div>
    </div>
}
