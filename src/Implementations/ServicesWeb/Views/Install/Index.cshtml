@model ServicesWeb.Models.InstallationModel

@{
    Layout = "../Layouts/Default.cshtml";
}

<div>
    @if (Model.DatabaseUpgradeAvailable)
    {
        using (Html.BeginForm("Index", "Install"))
        {
            @Html.AntiForgeryToken()

            <p>
                A database upgrade is available. Make sure you have a database backup before
                proceeding with the upgrade.
            </p>
            <button type="submit" class="btn btn-danger">Upgrade</button>
        }
    }
</div>